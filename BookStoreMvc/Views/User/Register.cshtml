@model Models.Register.RegisterVM

@{
   
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
    <form asp-controller="Home" asp-action="Index" style="width: 400px;">
        <div class="mb-3">
            Nom :
            <input class="form-control" type="text" asp-for="Nom">
        </div>

        <div class="mb-3">
            Prénom :
            <input class="form-control" type="text" asp-for="Prenom">
        </div>

       
        <div class="mb-3">
            <label class="form-label">E-Mail</label>
            <input class="form-control" asp-for="Mail" type="email">
            <div id="emailHelp" class="form-text">We'll never share your personnal information with anyone else.</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Adresse</label>
            <input class="form-control" asp-for="Adresse" type="text">
        </div>

        <div class="mb-3">
            <label class="form-label">Mot de Passe</label>
            <input class="form-control" asp-for="MotDePasse1" type="password">
        </div>

        <div class="mb-3">
            <label class="form-label">Confirmer Mot de Passe</label>
            <input class="form-control" asp-for="MotDePasse2" type="password">
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
       
    </form>
</div>
